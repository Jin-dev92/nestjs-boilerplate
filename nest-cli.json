{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-boilerplate/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-boilerplate/tsconfig.app.json"
  },
  "projects": {
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "nestjs-boilerplate": {
      "type": "application",
      "root": "apps/nestjs-boilerplate",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-boilerplate/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-boilerplate/tsconfig.app.json"
      }
    },
    "chat": {
      "type": "application",
      "root": "apps/chat",
      "entryFile": "main",
      "sourceRoot": "apps/chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/nestjs-boilerplate"
}